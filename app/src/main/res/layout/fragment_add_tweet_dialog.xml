<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_30"
    android:layout_marginEnd="@dimen/margin_30"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AddTweetDialogFragment"
    android:background="@drawable/dialog_bg">

   <androidx.appcompat.widget.AppCompatEditText
       android:id="@+id/etTweet"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:hint="What's happening?"
       android:inputType="textMultiLine"
       android:gravity="top|left"
       android:padding="@dimen/padding_10"
       android:layout_margin="@dimen/margin_20"
       app:layout_constraintTop_toTopOf="parent"
       android:background="@drawable/bg_tweet"/>

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/btnAddTweet"
       style="?android:attr/borderlessButtonStyle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="@dimen/margin_20"
       android:background="@drawable/rounded_bg"
       android:fontFamily="@font/open_sans_semibold"
       android:minWidth="0dp"
       android:minHeight="0dp"
       android:layout_marginStart="@dimen/padding_20"
       android:paddingTop="@dimen/padding_10"
       android:layout_marginEnd="@dimen/padding_20"
       android:paddingBottom="@dimen/padding_10"
       android:paddingStart="@dimen/padding_20"
       android:paddingEnd="@dimen/padding_20"
       android:text="Tweet"
       android:textAllCaps="false"
       android:textColor="@color/white"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@id/etTweet"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginBottom="@dimen/margin_10"/>

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/btnCancel"
       style="?android:attr/borderlessButtonStyle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="@dimen/margin_20"
       android:fontFamily="@font/open_sans_semibold"
       android:minWidth="0dp"
       android:minHeight="0dp"
       android:layout_marginStart="@dimen/padding_20"
       android:paddingTop="@dimen/padding_10"
       android:layout_marginEnd="@dimen/padding_20"
       android:paddingBottom="@dimen/padding_10"
       android:paddingStart="@dimen/padding_20"
       android:paddingEnd="@dimen/padding_20"
       android:text="Cancel"
       android:textAllCaps="false"
       android:textColor="@color/grey_dark"
       app:layout_constraintEnd_toStartOf="@+id/btnAddTweet"
       app:layout_constraintTop_toBottomOf="@id/etTweet"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_marginBottom="@dimen/margin_10"/>

</androidx.constraintlayout.widget.ConstraintLayout>